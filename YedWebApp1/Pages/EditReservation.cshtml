@page
@model EditReservationModel
@{
    ViewData["Title"] = "Edit Reservation";
}

<head>
    <link rel="stylesheet" href="~/css/EditReservationStyle.css" asp-append-version="true" />
</head>

<h2>Edit Reservation</h2>

<form method="post">
    <div class="form-group">
        <label for="RoomId">Room</label>
        <select id="RoomId" name="RoomId" class="form-control">
            @foreach (var room in Model.Rooms)
            {
                <option value="@room.Id" selected="@room.Id == Model.Reservation.RoomId">@room.RoomName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="ReservationStartDate">Start Date</label>
        <input type="date" id="ReservationStartDate" name="ReservationStartDate" class="form-control" value="@Model.Reservation.ReservationStartDate.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="ReservationEndDate">End Date</label>
        <input type="date" id="ReservationEndDate" name="ReservationEndDate" class="form-control" value="@Model.Reservation.ReservationEndDate.ToString("yyyy-MM-dd")" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
