@page
@model DeleteReservationModel
@{
    ViewData["Title"] = "Delete Reservation";
}

<head>
    <link rel="stylesheet" href="~/css/RoomReservationsStyle.css" asp-append-version="true" />
</head>

<h2>Delete Reservation</h2>

<form method="post">
    <p  style="color: #8b6a54;">Are you sure you want to delete this reservation?</p>
    <div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="/ShowReservations" class="btn btn-secondary">Cancel</a>
    </div>
</form>
