@page
@model MyApp.Namespace.ShowRoomsModel
@{
    ViewData["Title"] = "Show Rooms";
}

<h1>Show Rooms</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Capacity</th>
            <th scope="col">Room Name</th>
            <th scope="col">Image</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.RoomList)
        {
            <tr>
                <td>@room.Capacity</td>
                <td>@room.RoomName</td>
                <td>
                    @if (!string.IsNullOrEmpty(room.ImagePath))
                    {
                        <img src="@room.ImagePath" alt="@room.RoomName" width="100" height="100" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@room.Id" onsubmit="return confirm('Are you sure you want to delete this room?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
