@page
@model ShowReservationModel
@{
    ViewData["Title"] = "Show Reservations";
}

<head>
    <link rel="stylesheet" href="~/css/ShowReservationsStyle.css" asp-append-version="true" />
</head>

<h2>Show Reservations</h2>

<form method="get" class="filter-form">
    <div class="form-group">
        <label for="RoomName">Room Name</label>
        <input type="text" id="RoomName" name="RoomName" class="form-control" value="@Model.Filter.RoomName" />
    </div>
    <div class="form-group">
        <label for="StartDate">Start Date</label>
        <input type="date" id="StartDate" name="StartDate" class="form-control" value="@Model.Filter.StartDate?.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="EndDate">End Date</label>
        <input type="date" id="EndDate" name="EndDate" class="form-control" value="@Model.Filter.EndDate?.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="Capacity">Room Capacity</label>
        <input type="number" id="Capacity" name="Capacity" class="form-control" value="@Model.Filter.Capacity" />
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<table class="table table-hover">
    <thead>
        <tr>
           <th>Room Name</th>
            <th>Start Date</th>
            <th>Start Time</th>
            <th>End Date</th>
            <th>End Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model.Reservations)
        {
            <tr>
                 <td>@reservation.room.RoomName</td>
                <td>@reservation.ReservationStartDate.ToString("yyyy-MM-dd")</td>
                <td>@reservation.ReservationStartDate.ToString("HH:mm")</td>
                <td>@reservation.ReservationEndDate.ToString("yyyy-MM-dd")</td>
                <td>@reservation.ReservationEndDate.ToString("HH:mm")</td>
                <td>
                    <a href="/EditReservation?id=@reservation.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/DeleteReservation?id=@reservation.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

